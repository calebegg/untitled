{
  "name": "@mindofmatthew/cyclist",
  "version": "0.0.1",
  "description": "Experimental Tidal Cycles editor",
  "scripts": {
    "dev": "parcel app/client/index.html",
    "build": "parcel build .",
    "start": "electron dist/server/index.js"
  },
  "client": "dist/client/index.html",
  "server": "dist/server/index.js",
  "targets": {
    "client": {
      "source": "app/client/index.html",
      "context": "browser"
    },
    "server": {
      "source": "app/server/window.ts",
      "context": "electron-main"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mindofmatthew/cyclist.git"
  },
  "author": "Matthew Kaney",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/mindofmatthew/cyclist/issues"
  },
  "homepage": "https://github.com/mindofmatthew/cyclist#readme",
  "dependencies": {
    "@codemirror/basic-setup": "^0.18.0",
    "@codemirror/commands": "^0.18.0",
    "@codemirror/lang-javascript": "^0.18.0",
    "@codemirror/legacy-modes": "^0.18.0",
    "@codemirror/state": "^0.18.1",
    "@codemirror/stream-parser": "^0.18.1",
    "@codemirror/text": "^0.18.0",
    "@codemirror/view": "^0.18.1",
    "@types/ws": "^7.4.1",
    "node-static": "^0.7.11",
    "ws": "^7.4.4"
  },
  "devDependencies": {
    "electron": "^12.0.5",
    "lezer-generator": "^0.13.3",
    "parcel": "^2.0.0-beta.2"
  }
}
